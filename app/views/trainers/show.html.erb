<h3>Trainer</h3>
<p>Name: <%= @trainer.name if @trainer.name %></p>
<p>Email: <%= @trainer.email if @trainer.email %></p>
<br />
<% @trainer.pokemons.each do |pokemon| %>
	<p><%= pokemon.name %> - Level: <%= pokemon.level %> - Health: <%= pokemon.health %> <%= button_to "Damage", damage_path(id: pokemon, tr:@trainer), :class => "button medium", :method => :patch %> 
	</p><br />
<% end %>

